<!-- _Payments.cshtml -->
@model IEnumerable<User>

@if (Model != null)
{
    <!DOCTYPE html>
    <html>
    <head>
        <!-- Add your meta tags, title, and other external styles and scripts here -->

        <style>
            /* Add your existing CSS styles here */
            /* ... */

            /* Table-specific styles */
            table {
                border-collapse: collapse;
                width: 100%;
            }

            th, td {
                padding: 8px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            th {
                background-color: #f2f2f2;
                color: #333;
            }

            tr:hover {
                background-color: #f5f5f5;
            }
        </style>

        <!-- Toastr and jQuery scripts -->
        <!-- ... -->
    </head>
    <body>

        <div style="margin-left: 40px; margin-top: 40px; width: 1150px;">

            <div class="container mt-4">
                <h5 class="mb-4" style="margin-bottom:20px; margin-top:20px;">User Report</h5>

                <!-- Table to display User data -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>User ID</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Confirm Password</th>
                                <th>Password Salt</th>
                                <th>Create Date</th>
                                <th>Update Date</th>
                                <th>Phone Number</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Address</th>
                                <th>Image URL</th>
                                <th>Role ID</th>
                                <!-- Add other User attributes here -->
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Username</td>
                                    <td>@item.Email</td>
                                    <td>@item.Password</td>
                                    <td>@item.ConfirmPassword</td>
                                    <td>@item.PasswordSalt</td>
                                    <td>@item.CreateDate</td>
                                    <td>@item.UpdateDate</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Address</td>
                                    <td>@item.ImageUrl</td>
                                    <td>@item.RoleId</td>
                                    <!-- Display other User attributes -->
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Your existing popup container and other HTML content -->
        <!-- ... -->

    </body>
    </html>
}
