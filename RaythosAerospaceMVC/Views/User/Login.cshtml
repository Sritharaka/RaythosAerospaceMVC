@model RaythosAerospaceMVC.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = null; // No layout initially
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">


    <!-- Include Bootstrap CSS or other necessary styles -->
    <style>
        body {
            background-color: #f0f0f0; /* Set the desired background color for the entire body */
        }

        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 50px;
        }

        .login-form {
            flex: 1;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
            margin-right: 20px; /* Add space between form and image */
        }

        .login-image {
            flex: 1;
            text-align: center;
        }

        .btn-login {
            position: relative;
        }

            .btn-login i {
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
            }

            .btn-login span {
                padding-left: 20px; /* Adjust the padding as needed */
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row login-container">
            <div class="col-md-6 login-form" style="height:410px;">
                <h2 class="text-center mb-4">Log In</h2>

                <form asp-action="Login" asp-controller="User" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Enter Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Password" class="form-control" placeholder="Enter Password" required type="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block btn-login" style="    margin-left: 258px; margin-top: 18px;">
                        <i class="bi bi-house-lock"></i> <!-- Bootstrap Icon -->
                        <span>Log In</span>
                    </button>
                </form>

                <p class="mt-3 text-center">Don't have an account? <a asp-action="Register" asp-controller="User">Sign Up</a></p>

                <div class="text-center text-danger">
                    <partial name="_ValidationSummary" />
                </div>
            </div>
            <div class="col-md-6 login-image" style="height:410px;">
                <!-- Add your image here -->
                <img src="~/images/plane10.png" alt="Login Image" style="max-width: 100%; height: auto; border: 1px solid #ccc; border-radius: 5px; height: 410px;
    margin-left: -61px; background-color:lightblue" />
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Include jQuery and Bootstrap JS -->
</body>
</html>
