@model User

<div class="d-flex align-items-center">
    <!-- User Avatar (Circular) -->
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {

        <div class="avatar mr-2">
            <img src="@Url.Content("/" + Model.ImageUrl)" class="avatar-img rounded-circle" alt="User Avatar" style="background-color: white; width: 40px; height: 40px;">
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.FirstName) && !string.IsNullOrEmpty(Model.LastName))
    {

        <!-- Display User Name -->
        <span style="font-weight: bold; color: white; margin-right: 20px;">@Model.FirstName @Model.LastName</span>

    }
    <!-- You can include other user information here -->
</div>
